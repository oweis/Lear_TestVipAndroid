<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#2980b9"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/nameUsedInLear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="2dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="nameUsedInLear"
        android:textColor="#2980B9" />

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:tag="id"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/nameUsedInClient"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUsedInLear"
        android:padding="2dp"
        android:text="nameUsedInClient : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUsedInClient"
        android:padding="2dp"
        android:text="Date : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:padding="2dp"
        android:text="Level : "
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonIdPartNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getIdPartNumber"
        android:tag="0"
        android:drawableLeft="@drawable/button_partnumber"
        android:text="Lancer test BIP" />
</LinearLayout>