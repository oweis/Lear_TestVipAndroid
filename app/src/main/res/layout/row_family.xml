<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#EB2B36"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/namePassByUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EB2B36"
        android:background="#ffffff"
        android:gravity="right"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="namePassByUser : " />
    <TextView
        android:id="@+id/nameUsedInLear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namePassByUser"
        android:text="nameUsedInLear : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/nameUsedInClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_below="@+id/nameUsedInLear"
        android:text="nameUsedInClient : "

        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/client"
        android:layout_below="@+id/nameUsedInClient"
        android:text="Date : "

        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:text="Client : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/extra"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/client"
        android:text="Extra : "
        android:textColor="#ffffff" />

    <TextView

        android:id="@+id/date_creation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra"
        android:text="Date creation  : "
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonIdFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendIdFamily"
        android:tag="0"
        android:drawableLeft="@drawable/button_family"
        android:text="Afficher les part numbers" />

</LinearLayout>